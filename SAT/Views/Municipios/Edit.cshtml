@model SAT.Models.tbMunicipios

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="x_panel">
	<div class="x_title">
		<h2>Editar municipio</h2>
		<div class="nav navbar-right panel_toolbox">
			@Html.ActionLink("Regresar", "Index")
		</div>
		<div class="clearfix"></div>
	</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.mun_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.mun_Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.mun_Descripcion, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
                @Html.ValidationMessageFor(model => model.mun_Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

       

        

        <div class="form-group">
            @Html.LabelFor(model => model.mun_UsuarioModifica, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.mun_UsuarioModifica, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.mun_UsuarioModifica, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            @Html.LabelFor(model => model.dep_Id, "dep_Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("dep_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.dep_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-success" />
				@Html.ActionLink("Cancelar", "Index", null, new {@class = "btn btn-default"})
            </div>
        </div>
    </div>
}
</div>
<div class="x_panel">
    <div class="x_title">
        <h2>Auditoría</h2>
        <div class="clearfix"></div>
    </div>

    <div class="form-horizontal">
        <table class="table table-striped table-bordered dataTable">
            <thead>
                <tr>
                    <th>Acción</th>
                    <th>Usuario</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Creado</td>
                    <td>@Html.DisplayFor(model => model.mun_UsuarioCrea )</td>
                    <td>@Html.DisplayFor(model => model.mun_FechaCrea)</td>
                </tr>
                <tr>
                    <td>Modificado</td>
                    <td>@Html.DisplayFor(model => model.mun_UsuarioModifica )</td>
                    <td>@Html.DisplayFor(model => model.mun_FechaModifica )</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

