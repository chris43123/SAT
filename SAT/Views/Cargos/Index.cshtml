@model IEnumerable<SAT.Models.tbCargos>

@{
    ViewBag.Title = "Listado Cargos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="x_panel">
	<div class="x_title">
		<h2>Listado Cargos</h2>
		<div class="nav navbar-right panel_toolbox">
		@Html.ActionLink("Registrar Departamento", "Create", null,new{@class="btn btn-info"})

		</div>
		<div class="clearfix"></div>
	</div>

<table class="table table-striped table-bordered dataTable">
<thead>
	<tr>
        <th>
            @Html.DisplayNameFor(model => model.carg_Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.carg_FechaCrea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.carg_FechaModifica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbUsuarios.usu_NombreUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbUsuarios1.usu_NombreUsuario)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.carg_Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.carg_FechaCrea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.carg_FechaModifica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbUsuarios.usu_NombreUsuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbUsuarios1.usu_NombreUsuario)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.carg_Id }, new {@class = "btn btn-default btn-xs"})
            @Html.ActionLink("Detalle", "Details", new { id=item.carg_Id }, new {@class = "btn btn-default btn-xs"})
        </td>
    </tr>
}
</tbody>

</table>
</div>
