@model SAT.Models.tbCargos

@{
    ViewBag.Title = "Crear Cargo ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="x_panel">
	<div class="x_title">
		<h2>Crear Cargo</h2>
		<div class="nav navbar-right panel_toolbox">
		@Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-info" })
		</div>
		<div class="clearfix"></div>
	</div>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
   
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*@Html.HiddenFor(model => model.carg_Id)*@
        @*@Html.HiddenFor(model => model.carg_UsuarioCrea)
        @Html.HiddenFor(model => model.carg_FechaCrea)*@
