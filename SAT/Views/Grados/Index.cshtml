@model IEnumerable<SAT.Models.tbGrados>

@{
    ViewBag.Title = "Grados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="x_panel">
	<div class="x_title">
		<h2>Grados</h2>
		<div class="nav navbar-right panel_toolbox">
		@Html.ActionLink("Registrar Departamento", "Create", null,new{@class="btn btn-info"})

		</div>
		<div class="clearfix"></div>
	</div>

<table class="table table-striped table-bordered dataTable">
<thead>
	<tr>
        <th>
            @Html.DisplayNameFor(model => model.grad_Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.grad_UsuarioCrea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.grad_FechaCrea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.grad_UsuarioModifica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.grad_FechaModifica)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.grad_Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbUsuarios.usu_NombreUsuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.grad_FechaCrea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbUsuarios1.usu_NombreUsuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.grad_FechaModifica)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.grad_Id }, new {@class = "btn btn-default btn-xs"})
            @Html.ActionLink("Detalle", "Details", new { id=item.grad_Id }, new {@class = "btn btn-default btn-xs"})
        </td>
    </tr>
}
</tbody>

</table>
</div>
