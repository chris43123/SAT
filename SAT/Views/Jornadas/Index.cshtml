@model IEnumerable<SAT.Models.tbJornadas>

@{
    ViewBag.Title = "Listado jornadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="x_panel">
	<div class="x_title">
		<h2>Listado de jornadas</h2>
		<div class="nav navbar-right panel_toolbox">
			@Html.ActionLink("Resgitrar jornadas", "Create", null, new {@class ="btn btn-info"})
		</div>
		<div class="clearfix"></div>
	</div>
<table class="table table-striped table-bordered dataTable" id="tblIndexJornada">
<thead>
	<tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.jor_Descripcion)
        </th>

        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>   
        <td><button class="btn btn-primary btn-xs" id="btnExpandir" data-id="@item.jor_Id">+</button></td>
        <td>
            @Html.DisplayFor(modelItem => item.jor_Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.jor_Id}, new {@class = "btn btn-success btn-xs"})
            @Html.ActionLink("Detalle", "Details", new { id=item.jor_Id }, new {@class = "btn btn-warning btn-xs"})
        </td>

    </tr>
    <tr style="display:none" id="fila-@item.jor_Id">
        <td></td>
        <td colspan="2">@Html.Partial("_IndexGrado", item.tbJornadaGrados, new ViewDataDictionary { { "jor_Id", item.jor_Id } })</td>
        <td></td>

    </tr>
}
</tbody>
</table>
</div>
