@model SAT.Models.tbAsignaturas

@{
    ViewBag.Title = "Editar Asignatura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="x_panel">
	<div class="x_title">
		<h2>Editar Asignatura</h2>
		<div class="nav navbar-right panel_toolbox">
		@Html.ActionLink("Regresar", "Index")
	</div>
	<div class="clearfix"></div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.asig_FechaCrea)
    @Html.HiddenFor(model => model.asig_UsuarioCrea)

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.asig_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.asig_Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.asig_Descripcion, new { htmlAttributes = new { @class = "form-control",@maxlength="100"} })
                @Html.ValidationMessageFor(model => model.asig_Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.asig_Semestral, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.asig_Semestral)
                    @Html.ValidationMessageFor(model => model.asig_Semestral, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
				@Html.ActionLink("Cancelar","Index",null,new{@class="btn btn-default"})
            </div>
        </div>
    </div>
    <div class="x_panel">
        <div class="x_title">
            <h2>Auditoría</h2>
            <div class="clearfix"></div>
        </div>

        <div class="form-horizontal">
            <table class="table table-striped table-bordered dataTable">
                <thead>
                    <tr>
                        <th>Acción</th>
                        <th>Usuario</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Creado</td>
                        <td>@Html.DisplayFor(model => model.asig_UsuarioCrea)</td>
                        <td>@Html.DisplayFor(model => model.asig_FechaCrea)</td>
                    </tr>
                    <tr>
                        <td>Modificado</td>
                        <td>@Html.DisplayFor(model => model.asig_UsuarioModifica)</td>
                        <td>@Html.DisplayFor(model => model.asig_FechaModifica)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}
</div>

