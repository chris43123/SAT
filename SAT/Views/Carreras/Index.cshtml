@model IEnumerable<SAT.Models.tbCarreras>

@{
    ViewBag.Title = "Listado de carreras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="x_panel">
	<div class="x_title">
		<h2>Listado de carreras</h2>
		<div class="nav navbar-right panel_toolbox">
			@Html.ActionLink("Resgitra departamento", "Create", null, new {@class ="btn btn-info"})
		</div>
		<div class="clearfix"></div>
	</div>
<table class="table table-striped table-bordered dataTable" id="TableGrid">
<thead>
	<tr>
        <th>
            @Html.DisplayNameFor(model => model.car_Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.car_UsuarioCrea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.car_FechaCrea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.car_UsuarioModifica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.car_FechaModifica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbEmpleados.emp_Identidad)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.car_Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.car_UsuarioCrea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.car_FechaCrea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.car_UsuarioModifica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.car_FechaModifica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbEmpleados.emp_Identidad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.car_Id }, new {@class = "btn btn-default btn-xs"})
            @Html.ActionLink("Detalle", "Details", new { id=item.car_Id }, new {@class = "btn btn-default btn-xs"})
        </td>
    </tr>
}
</tbody>
</table>
</div>
