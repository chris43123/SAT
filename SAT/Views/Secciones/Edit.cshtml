@model SAT.Models.tbSecciones

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
<div class="x_panel">
	<div class="x_title">
		<h2>Editar Sección</h2>
		<div class="nav navbar-right panel_toolbox">
		@Html.ActionLink("Regresar", "Index")
	</div>
	<div class="clearfix"></div>
</div>

    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.sec_Id)
       
        @Html.HiddenFor(model => model.sec_UsuarioCrea)
        @Html.HiddenFor(model => model.sec_FechaCrea)
        @Html.HiddenFor(model => model.sec_UsuarioModifica)
        @Html.HiddenFor(model => model.sec_FechaModifica)

        <div class="form-group">
            @Html.LabelFor(model => model.sec_Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sec_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sec_Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.jgra_Id, "jgra_Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("jgra_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.jgra_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
				@Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>
<div class="x_panel">
    <div class="x_title">
        <h2>Auditoría</h2>
        <div class="clearfix"></div>
    </div>

    <div class="form-horizontal">
        <table class="table table-striped table-bordered dataTable">
            <thead>
                <tr>
                    <th>Acción</th>
                    <th>Usuario</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Creado</td>
                    <td>@Html.DisplayFor(model => model.sec_UsuarioCrea)</td>
                    <td>@Html.DisplayFor(model => model.sec_FechaCrea)</td>
                </tr>
                <tr>
                    <td>Modificado</td>
                    <td>@Html.DisplayFor(model => model.sec_UsuarioModifica)</td>
                    <td>@Html.DisplayFor(model => model.sec_FechaModifica)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
}

